[
    // delete current cursor line
    {
        "key": "ctrl+d",
        "command": "editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    // Zoom in   
    {
        "key": "cmd+[Equal]",
        "command": "workbench.action.zoomIn"
    },
    // Duplicate current line
    {
        "key": "cmd+d",
        "command": "editor.action.duplicateSelection"
    },
    
    // Focus on terminal
    {
        "key": "cmd+down",
        "command": "terminal.focus"
    },
    // Focus on editor
    {
        "key": "cmd+up",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "cmd+k e",
        "command": "-workbench.files.action.focusOpenEditorsView",
        "when": "workbench.explorer.openEditorsView.active"
    },
    
    // Add single line comment(language specific)
    {
        "key": "cmd+[Minus]",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    
    //  Stop screen recording
    {
        "key": "cmd+y",
        "command": "chronicler.stop"
    },
    
    //  Start screen recording
    {
        "key": "alt+cmd+y",
        "command": "chronicler.recordGif"
    },

    // Toggle terminal panel in full screen
    // { 
    //     "key":"option+j", 
    //     "command":"workbench.action.toggleMaximizedPanel",
    //     "when":"!terminalFocus" 
    // },
    // // Toggle terminal panel 
    // { 
    //     "key":"ctrl+j", 
    //     "command":"workbench.action.toggleMaximizedPanel",
    //     "when":"terminalFocus" 
    // },
    
    {
        "key": "ctrl+shift+q",
        "command": "git.openFile",
        "when": "editorFocus && isInDiffEditor"
    },

    {
        "key": "ctrl+shift+q",
        "command": "git.openChange",
        "when": "editorFocus && !isInDiffEditor"
    },

    {
        "key": "shift+cmd+c",
        "command": "dbtPowerUser.showCompiledSQL"
    },

    // toggle everything
    {
        "key": "cmd+b",
        "command" :"macros.commentDown"
    },
    {
        "key": "alt+f",
        "command": "revealFileInOS",
        "when": "!editorFocus"
    },
 
    // Open file in finder
    {
        "key": "alt+cmd+r",
        "command": "-revealFileInOS",
        "when": "!editorFocus"
    },
 
    // Toggle Git change view for a file
    {
        "key": "ctrl+shift+g",
        "command": "git.openFile",
        "when": "editorFocus && isInDiffEditor"
    },
    // Toggle file from git change view
    {
        "key": "ctrl+shift+g",
        "command": "git.openChange",
        "when": "editorFocus && !isInDiffEditor"
    },

    {
        "key": "shift shift",
        "command": "workbench.action.showCommands",
        "when": "editorFocus && !isInDiffEditor"
    }
 
    
]